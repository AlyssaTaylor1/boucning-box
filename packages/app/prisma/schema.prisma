model User {
  id          Int      @id(map: "primary")
  createdAt   DateTime @default(now())
  email       String   @unique
  name        String?
  profile_pic String?
  posts       Post[]
  likes       Like[]
}

model Post {
  id        Int      @id(map: "primary")
  createdAt DateTime @default(now())
  body      String?  @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  likes       Like[]
}

model Like {
  id        Int      @id(map: "primary")
  createdAt DateTime @default(now())
  userId    Int
  postId    Int
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])

}
